{
    "name": "alanpoulain/zxcvbn-php",
    "type": "library",
    "description": "Realistic password strength estimation PHP library",
    "keywords": ["zxcvbn", "password", "security"],
    "homepage": "https://github.com/alanpoulain/zxcvbn-php",
    "license": "MIT",
    "authors": [
        {
            "name": "See contributors",
            "homepage": "https://github.com/alanpoulain/zxcvbn-php"
        }
    ],
    "require": {
        "ext-json": "*",
        "php": "^8.2",
        "loophp/phptree": "^2.6",
        "symfony/polyfill-mbstring": "^1.3",
        "symfony/finder": "^7.0",
        "symfony/translation": "^7.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "phpunit/phpunit": "^10.5",
        "php-coveralls/php-coveralls": "*",
        "infection/infection": "^0.28"
    },
    "suggest": {
        "ext-gmp": "Optimize binomial calculations",
        "ext-intl": "Convert Unicode numbers"
    },
    "autoload": {
        "psr-4": { "ZxcvbnPhp\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "ZxcvbnPhp\\Test\\": "test/" }
    },
    "scripts": {
        "cs": "vendor-bin/php-cs-fixer/vendor/friendsofphp/php-cs-fixer/php-cs-fixer",
        "mutation": ["Composer\\Config::disableProcessTimeout", "vendor/bin/infection --threads=max"],
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "infection/extension-installer": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true
        }
    }
}
